{
  "entrypoint": "index.html",
  "sources": [
    "src/**/*",
    "images/**/*",
    "sounds/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "config.json",
    "node_modules/@webcomponents/webcomponentsjs/*.js"
  ],
  "builds": [
    {
      "preset": "es5-bundled"
    }
  ],  
  "lint": {
    "rules": ["polymer-2"]
  },
  "x-builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    },
    {
      "name": "bundled-custom",
      "bundle": {
        "stripComments": true,
        "inlineCss": false,
        "sourcemaps": true
      },
      "addServiceWorker": true,
      "insertPrefetchLinks": true,
      "swPrecacheConfig": "sw-precache-config.js",
      "addPushManifest": true,
      "js": {
        "compile": false,
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    }    
  ]
}
